<TransactionWindow>
    id: transaction_win
    operation: 'vertical'
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size: root.width, root.height
        orientation: 'vertical'
        spacing: 3

        Label:
            size_hint: None, None
            size: 1280, 104
            canvas.before:
                Color:
                    rgba: (0.7294117647058823, 0.8431372549019608, 0.9137254901960784, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            text: "Transaction"
            text_size: 1280 - 31, self.height
            valign: 'center'
            halign: 'left'
            font_size: 45
            color: (43/255,52/255,103/255,1)
            font_family: "Lexend"