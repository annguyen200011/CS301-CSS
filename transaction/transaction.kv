<FlatButton@ButtonBehavior+Label>:
    font_size: 14

<TransactionWindow>:
    id: main_win
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: (217/255, 217/255, 217/255, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    FloatLayout:
        orientation: 'horizontal'
        size_hint_y: None
        id: header
        height: 104
        #padding: [dp(37), 0, 0, 0]
        canvas.before:
            Color:
                rgba: (186/255, 215/255, 233/255, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        MDIcon:
            icon: 'arrow-left'
            padding: dp(37), 0
            width: dp(52)
            height: dp(52)
            font_size: sp(45)
            pos_hint: {'top': 0.7333, 'left': 0.02}

        Label:
            padding: dp(35.67), 0
            text: 'Checkout Counter > New Order'
            font: 'Lexend-Regular'
            halign: 'left'
            font_size: sp(45)
            bold: False
            color: (43/255,52/255,103/255,1)
            pos_hint: {'top': 1.0333, 'left': 0.16}

        MDIconButton:
            id: loggedin_user
            icon: 'dog'
            color: (43/255, 52/255, 103/255, 1)
            width: sp(81)
            height: sp(64)
            pos_hint: {'top': 0.75, 'right': 0.96}

    BoxLayout:
        id: tab
        padding: [0,0,0,35]
        size_hint_y: None
        canvas.before:
            Color:
                rgba: (242/255,242/255,242/255, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            text: 'ORDER INFORMATION'
            font: 'BalsamiqSans-Regular'
            font_size: sp(14)
            background_normal: ''
            background_color: 
            color: (26/255,26/255,26/255, 1)
            size_hint_x: .5
            height: dp(64)
        Button:
            id: cur_product
            text: 'PAYMENT INFORMATION'
            font: 'BalsamiqSans-Regular'
            font_size: sp(14)
            background_normal: ''
            color: (26/255,26/255,26/255, 1)
            size_hint_x: .5
            height: dp(64)
    
    BoxLayout:
        id: infowindow
        size_hint_y: None
        size_hint_x: None
        width: main_win.width - dp(38)
        pos_hint: {'center_x': 0.5}
        orientation: 'vertical'
        height: dp(95)
        
        canvas.before:
            RoundedRectangle:
                pos: self.pos
                size: self.size